{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "GuardiasWeb",
  "version": "0.1.0",
  "identifier": "com.guardiasweb.app",
  "build": {
    "frontendDist": [
      "./static/index.html"
    ]
  },
  "app": {
    "withGlobalTauri": false,
    "windows": [
      {
        "title": "Guardias Web",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "resources": [
      ".env",
      "../habilitarTLS-W7.reg",
      "../aplicar-tls.cmd"
    ],
    "windows": {
      "webviewInstallMode": {
        "type": "offlineInstaller"
      },
      "nsis": {
        "languages": [
          "Spanish"
        ]
      }
    },
    "active": true,
    "targets": ["nsis"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}